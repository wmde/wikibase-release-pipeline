	"version": "0.2.0",
	"configurations": [
		{
			"name": "Test Runner (Docker): Attach to Runnings Specs",
			"type": "node",
			"request": "attach",
			"restart": true,
			"port": 9229,
			"address": "localhost",
			"localRoot": "${workspaceFolder}/test",
			"remoteRoot": "/usr/src/test",
			"sourceMaps": true,
			"autoAttachChildProcesses": true,
			"skipFiles": [
				"${workspaceFolder}/test/node_modules/**",
				"<node_internals>/**"
			]
		}
	]
}
