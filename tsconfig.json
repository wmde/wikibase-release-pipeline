{
	"compilerOptions": {
		"target": "esnext",
		"module": "NodeNext",
		"esModuleInterop": true,
		"rootDir": ".",
		"sourceMap": true,
		"declaration": false,
		"moduleResolution": "NodeNext",
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"importHelpers": true,
		"lib": ["esnext"],
		"skipLibCheck": true,
		"skipDefaultLibCheck": true,
		"baseUrl": ".",
		"paths": {}
	},
	"ts-node": {
		"experimentalSpecifierResolution": "node",
		"transpileOnly": true,
		"files": true,
		"esm": true
	},
	"exclude": ["node_modules", "tmp"],
	"include": ["**/*.ts", "**/*.d.ts"]
}
