{
	"root": true,
	"extends": [
		"@wmde/wikimedia-typescript",
		"wikimedia/language/es2022",
		"./eslint/selenium"
	],
	"parserOptions": {
		"sourceType": "module",
		"allowImportExportEverywhere": true,
		"ecmaVersion": "latest"
	},
	"rules": {
		"mocha/no-setup-in-describe": "warn",
		"jsdoc/check-param-names": "off",
		"jsdoc/require-param": "off",
		"wdio/no-pause": "warn",
		"no-undef": "off",
		"node/no-missing-import": "off"
	}
}
