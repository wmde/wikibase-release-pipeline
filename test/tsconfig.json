{
  "compilerOptions": {
    "types": ["node", "@wdio/globals/types", "@wdio/mocha-framework", "./wdio"],
    "outDir": "./built",
    "allowJs": true,
    "target": "ES6",
    "module": "Node16",
    "moduleResolution": "Node16",
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "typeRoots": ["./node_modules/@types", "./node_modules", "./helpers/types"]
  },
  "include": ["./**/*"]
}
